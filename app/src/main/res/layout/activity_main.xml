<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            style="@style/AppPortfolioTitleStyle"
            android:text="@string/portfolio_title"
            android:layout_marginTop="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    style="@style/AppPortfolioButtonStyle"
                    android:text="SPOTIFY STREAMER"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="30dp" />

                <Button
                    android:id="@+id/button2"
                    style="@style/AppPortfolioButtonStyle"
                    android:text="SCORES APP"
                    android:layout_below="@+id/button"/>

                <Button
                    android:id="@+id/button3"
                    style="@style/AppPortfolioButtonStyle"
                    android:text="LIBRARY APP"
                    android:layout_below="@+id/button2" />

                <Button
                    android:id="@+id/button4"
                    style="@style/AppPortfolioButtonStyle"
                    android:text="BUILD IT BIGGER"
                    android:layout_below="@+id/button3" />

                <Button
                    android:id="@+id/button5"
                    style="@style/AppPortfolioButtonStyle"
                    android:text="XYZ READER"
                    android:layout_below="@+id/button4" />

                <Button
                    android:id="@+id/button6"
                    style="@style/AppPortfolioButtonStyle.SelectedButtonStyle"
                    android:text="CAPSTONE:MY APP"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15">
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
