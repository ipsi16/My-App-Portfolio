<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- My App Portfolio specs-->
    <style name="AppPortfolioTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="AppPortfolioButtonStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#F08C35</item>
        <item name="android:layout_marginTop">14sp</item>
        <item name="android:onClick">displayMessage</item>
    </style>
    <style name="AppPortfolioButtonStyle.SelectedButtonStyle" >
        <item name="android:background">#E91E63</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- End : My App Portfolio specs-->
</resources>
